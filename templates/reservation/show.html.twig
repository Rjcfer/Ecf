{% extends 'base.html.twig' %}
{% block javascripts %}
    <!-- need to load js before page -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    {{ encore_entry_script_tags('deleteOrModifyReservations') }}
{% endblock %}
{% block title %}Réservations{% endblock %}

{% block body %}
    <h1 class="h1c text-center">Réservation</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td class="rId">{{ reservation.id }}</td>
        </tr>
        <tr>
            <th>De</th>
            <td class="text-center">{{ reservation.startDate ? reservation.startDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Jusqu’à</th>
            <td class="text-center">{{ reservation.endDate ? reservation.endDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Suite</th>
            <td>{{ suiteName }}</td>
        </tr>
        <tr>
            <th>Hotel</th>
            <td>{{ hotel.name }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ hotel.address }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-secondary" href="{{ path('app_reservation_index') }}">Retour</a>

    <a class="btn btn-sm btn-secondary" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
