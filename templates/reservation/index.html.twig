{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>StartDate</th>
            <th>EndDate</th>
            <th>User_id</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            {% if is_granted('ROLE_USER') %}
                {% if (reservation.getUserId() == app.user.id ) %}
                    <tr>
                        <td>{{ reservation.id }}</td>
                        <td>{{ reservation.startDate ? reservation.startDate|date('Y-m-d') : '' }}</td>
                        <td>{{ reservation.endDate ? reservation.endDate|date('Y-m-d') : '' }}</td>
                        <td>{{ reservation.userId }}</td>
                        <td>
                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
                            <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                        </td>
                    </tr>
                {% endif %}
            {% endif %}
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Create new</a>
{% endblock %}
