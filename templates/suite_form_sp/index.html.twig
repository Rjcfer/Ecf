{% extends 'base.html.twig' %}

{% block title %}Formulaire pour une suite {% endblock %}

{% block body %}
<div>
    <div class="row pt-2">
        <div class="col ">
            <div class="form-group">
                {% if form is defined %}
                <div class="form-group">
                    {{ form_start(form) }}
                    {{ form_row(form.name,{ label: 'Nom', 'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.Title,{ label: 'Titre', 'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.description,{ label: 'Description', 'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.price,{ label: 'Prix', 'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.bookingUrl,{ label: 'Lien Booking', 'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.mainPictureUrl,{ label: 'Lien Photo', 'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label>Id_hotel </label>
                    <input class="form-control" type="number" id="hotel_id" name="hotel_id" required>
                </div>

                <label>Image en plus </label>
                <input class="form-control" type="text" id="picturesUrl" name="picturesUrl"
                       minlength="4" maxlength="8" size="10">
                <button type="submit" class="m-1 btn btn-primary">Enregistrer</button>
                {{ form_end(form) }}
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
