{% extends 'base.html.twig' %}

{% block title %}Hello HotelFormController!{% endblock %}

{% block body %}
    <div>
        <div class="row pt-2">
            <div class="col ">
                <div class="form-group">
                    {% if form is defined %}
                        {{ form_start(form) }}
                        {{ form_row(form.name) }}
                        {{ form_row (form.Title) }}
                        {{ form_row (form.description) }}
                        {{ form_row (form.price) }}
                        {{ form_row (form.bookingUrl) }}
                        {{ form_row (form.mainPictureUrl) }}
                        <label>id_hotel </label>
                        <input type="number" id="hotel_id" name="hotel_id" required>

                        <label>image en plus </label>
                        <input type="text" id="picturesUrl" name="picturesUrl"
                               minlength="4" maxlength="8" size="10">
                        <button type="submit" class="btn btn-primary">Register</button>
                        {{ form_end(form) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
