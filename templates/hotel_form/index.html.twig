{% extends 'base.html.twig' %}

{% block title %}Nouveau Hotel{% endblock %}

{% block body %}
    <div>
        <div class="row pt-2">
            <div class="col ">
                <div class="bg-white p-5 contact-form text-center">
                    <div class="form-group">
                        {{ form_start(form) }}
                        {{ form_row(form.address,  {label: 'Adresse','attr': {'class': 'form-control '}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.name, {label: 'Nom', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.pictureUrl,  {label: 'Url photo','attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.City, {label: 'Ville','attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.Description, { label: 'Description','attr': {'class': 'form-control'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
