{% extends 'base.html.twig' %}

{% block title %} Inscription {% endblock %}

{% block body %}
    <h1 class="text-center h1">Inscription</h1>
    <div class="bg-white p-5 contact-form">
        <div class="form-group">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.lastName, {
                label: 'Nom', 'attr': {'class': 'form-control'}
            }) }}    {{ form_row(registrationForm.firstName, {
                label: 'Prenom', 'attr': {'class': 'form-control'}
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.mail, {
                label: 'email', 'attr': {'class': 'form-control'}
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe', 'attr': {'class': 'form-control'}
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.agreeTerms, {
                label: 'J\'accepte les termes', 'attr': {'class': 'form-check'}
            }) }}
        </div>
        <button type="submit" class="btn btn-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
