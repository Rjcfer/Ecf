{% extends 'base.html.twig' %}

{% block title %}Hypnos{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row justify-content-center">
            {% for hotel in hotelList %}
                <div class="col-md-4 col-12 bg-light border rounded mx-2 my-2 shadow text-center  ">
                    <a class="text-decoration-none text-black" href="{{ path('show_suites', {'idHotel': hotel.id}) }}"
                    >
                        <div class="row justify-content-center">
                            <div class="col ">

                                <h3 class="h3">{{ hotel.name }} </h3>
                            </div>
                            <div class="row ">
                                <div class="col mx-1 my-1">
                                    <img class="rounded-3 " alt="Qries" src="{{ hotel.getPictureUrl }}" height="150">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <p>Adresse {{ hotel.address }}</p>
                            </div>
                        </div>
                    </a>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <div class="row">
                            <div class="col">
                                <a class="btn btn-outline-danger btn-sm"
                                   href="{{ path('hotel_delete', {'id': hotel.id }) }}"> Supprimer</a>
                            </div>
                        </div>
                        <div class="col p-2">
                            <a class="btn btn-outline-primary btn-sm"
                               href="{{ path('hotel_edit', {'id': hotel.id }) }}"> Modifier</a>
                        </div>
                        <div class="row">
                            <div class="col">
                                id: {{ hotel.id }}
                            </div>
                        </div>
                    {% endif %}
                </div>

            {% endfor %}
        </div>
    </div>

{% endblock %}
