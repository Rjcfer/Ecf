{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}


    <div class="row justify-content-center">
        {% for hotel in hotelList %}
             <a  href="{{ path('update_Suite', {'idHotel': hotel.id}) }}" class="col-md-4 bg-light border rounded mx-1 my-1 shadow text-center ">
                <div class="row justify-content-center">
                    <div class="col ">

                        <h3 class="h3">{{ hotel.name }} </h3>
                    </div>
                    <div class="row ">
                        <div class="col mx-1 my-1">
                            <img class="card-img" alt="Qries" src="{{ hotel.getPictureUrl }}"
                                 width=150" height="150">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <p>Adresse {{ hotel.address }}</p>
                    </div>
                </div>
            </a>
        {% endfor %}

    </div>


{% endblock %}
