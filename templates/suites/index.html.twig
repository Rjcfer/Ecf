{% extends 'base.html.twig' %}

{% block title %}Hello SuitesController!{% endblock %}
{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="row justify-content-center">
        {% for s in suitesList %}
            <div class="col-md-4 bg-light border rounded mx-1 my-1 shadow text-center ">
                <div class="row justify-content-center">
                    <div class="col ">

                        <h3 class="h3">{{ s.Title }} </h3>
                    </div>
                    <div class="row ">
                        <div class="col mx-1 my-1">
                            <a href="{{ path('show_suites', {'idHotel': s.id}) }}">
                                <img class="card-img" alt="Qries" src="{{ s.mainPictureUrl }}"
                                     width=150" height="150">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        {% if s.occupied == false %}
                            <button class=" btn  bg-success bg-opacity-75 rounded-3"> Reserver</button>
                        {% else %}
                            <p class="btn bg-danger bg-opacity-75 rounded-3">Occup√© </p>
                        {% endif %}
                    </div>

                </div>
            </div>
        {% endfor %}

    </div>


{% endblock %}
