{% extends 'base.html.twig' %}

{% block title %}{{ suite.name }}{% endblock %}
{% block body %}
    <div class="row">
        <div class="col">
            <h2 class="text-center">{{ suite.name }}</h2>
        </div>
    </div>
    <div class="row mt-3 ">
        <div class="col mt-3">
            <div id="carousel" class="carousel slide " data-bs-ride="carousel">
                <div class="carousel-inner ">
                    <div class="carousel-item active">
                        <img src="{{ suite.mainpictureUrl }}" class="d-block w-100 imgC" alt="...">
                    </div>
                    {% for img in suite.picturesUrl %}
                        <div class="carousel-item">
                            <img src="{{ img }}" class="d-block w-100 imgC" alt="...">
                        </div>
                    {% endfor %}
                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carousel"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="mt-3 col">
            <h3 class="text-center h3">Description</h3>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <p>{{ suite.description }}</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col text-center">
            {% if is_granted('ROLE_USER') %}
                <a class=" btn  bg-primary bg-opacity-75 rounded-3"
                   href="{{ path('app_reservation_newwithids', {'idHotel': suite.hotelid , 'idSuite': suite.id ,'idUser':app.user.id}) }}">
                    Réserver</a>
            {% else %}
                <a class=" btn  bg-primary bg-opacity-75 rounded-3"
                   href="{{ path('app_reservation_newwithoutuserId', {'idHotel': suite.hotelid , 'idSuite': suite.id }) }}">
                    Réserver</a>
            {% endif %}
        </div>
    </div>

    {% block javascripts %}
        <script>


        </script>
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('bootstrap') }}
    {% endblock %}
{% endblock %}